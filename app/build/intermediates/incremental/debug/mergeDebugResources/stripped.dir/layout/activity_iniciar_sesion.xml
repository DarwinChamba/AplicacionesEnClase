<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginHorizontal="20dp"
    tools:context=".appBanco.IniciarSesion">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--vista para el saldo usuario-->
        <EditText
            android:id="@+id/usuarioInico"
            android:hint="nombre Usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--vista para el tipo de cuenta-->
        <EditText
            android:id="@+id/passwordInicio"
            android:hint="Ingrese su contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnInciarSesion"
            android:text="Inciar sesión"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvNoTengoCuenta"
            android:text="NO Tengo cuenta. Regresar"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>